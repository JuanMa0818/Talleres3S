<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.fx10.controlador.DashboardController"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Encabezado -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="lblTitulo" prefHeight="0.0" prefWidth="1177.0"
               style="-fx-text-fill: #2c3e50;"
               text="Dashboard de Productos">
            <font>
                <Font name="System Bold" size="28" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Barra de botones superior (visible cuando NO hay vista activa) -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button fx:id="btnListado"
                onAction="#abrirListadoProducto"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;"
                text="Lista Productos">
            <font>
                <Font name="System Bold" size="14" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <Button fx:id="btnFormulario"
                onAction="#abrirFormularioProducto"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;"
                text="Crear Producto">
            <font>
                <Font name="System Bold" size="14" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>

        <!-- Botón para volver al dashboard (visible cuando HAY vista activa) -->
        <Button fx:id="btnVolverDashboardTop"
                onAction="#volverAlDashboard"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-cursor: hand; -fx-background-radius: 5;"
                text="← Volver al Dashboard"
                visible="false"
                managed="false">
            <font>
                <Font name="System Bold" size="14" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </HBox>

    <!-- Contenedor central donde se cargan las vistas -->
    <AnchorPane fx:id="contenedorCentral" prefHeight="400.0" prefWidth="1100.0"
                style="-fx-background-color: white; -fx-background-radius: 10;">
    </AnchorPane>

</VBox>