<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.parcial3.Controller.LoginMedicoController"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
            <Label text="Login Médico" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <TextField fx:id="txtEmail" promptText="Correo electrónico" prefWidth="300"/>
            <PasswordField fx:id="txtPassword" promptText="Contraseña" prefWidth="300"/>

            <Button text="Ingresar" onAction="#iniciarSesion" prefWidth="150"/>
        </VBox>
    </children>
</AnchorPane>
