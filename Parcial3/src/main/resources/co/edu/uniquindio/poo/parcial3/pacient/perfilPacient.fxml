<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.parcial3.Controller.PerfilPacientController"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox spacing="10" alignment="TOP_CENTER" layoutX="50" layoutY="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

            <Label text="Perfil del Paciente" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TextField fx:id="txtNombre" promptText="Nombre" />
            <TextField fx:id="txtApellido" promptText="Apellido" />
            <TextField fx:id="txtEmail" promptText="Correo electrónico" />
            <PasswordField fx:id="txtPassword" promptText="Contraseña" />

            <Button text="Guardar" onAction="#guardarPerfil" />
        </VBox>
    </children>
</AnchorPane>
